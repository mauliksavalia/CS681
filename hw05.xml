<!--  To run this build script, type:

      ant -f hw.xml

      on a shell.
-->
<project name="Employee Earnings Report 2022" basedir="."  default="clean" xmlns:ivy="antlib:org.apache.ivy.ant">
    <property name="src" location="src" />
    <property name="bin" location="bin" />
    <property name="test.src" location="test/src" />
    <property name="test.bin" location="test/bin" />
    <property name="ivy.lib" location="lib"/>

    <path id="classpath">
        <pathelement location="${bin}" />
        <pathelement location="${test.bin}" />
        <fileset dir="${ivy.lib}"/>
    </path>

    <target name="init">
        <mkdir dir="${bin}"/>
        <mkdir dir="${ivy.lib}"/>
        <echo message="CLASSPATH: ${toString:classpath}" />
    </target>

    <target name="compile">
        <javac srcdir="${src}" destdir="${bin}" includeAntRuntime="no">
            <classpath refid="classpath"/>
            <include name="edu/umb/cs681/hw05/*.java"/>

        </javac>

    </target>


    <target name="run" depends="compile">
        <java classname="edu.umb.cs681.hw05.EmployeeEarnings"
              classpathref="classpath"
              fork="true"/>
    </target>

    <target name="clean" depends="run">
        <delete includeemptydirs="true">
            <fileset dir="${bin}/edu/umb/cs681/hw05" includes="*/"/>
            <!--<fileset dir="${test.bin}/edu/umb/cs681/hw05" includes="*/"/>-->
        </delete>
    </target>

    <target name="clean-cache"
            description="--> clean the ivy cache (by default ~/.ivy2/cache)">
        <ivy:cleancache/>
    </target>
</project>